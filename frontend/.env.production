# API Configuration
VITE_API_BASE_URL=https://api.prompthub.com
VITE_API_VERSION=v1

# Authentication
VITE_AUTH_DOMAIN=auth.prompthub.com
VITE_AUTH_CLIENT_ID=your_auth0_client_id
VITE_AUTH_AUDIENCE=https://api.prompthub.com

# Feature Flags
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_SOCIAL_SHARING=true
VITE_ENABLE_MULTILINGUAL=true

# External Services
VITE_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
VITE_CLOUDINARY_UPLOAD_PRESET=prompthub_production

# Analytics and Monitoring
VITE_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-1
VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Application Settings
VITE_APP_NAME=PromptHub
VITE_APP_ENVIRONMENT=production
VITE_APP_VERSION=1.0.0
VITE_DEFAULT_LANGUAGE=en

# Rate Limiting
VITE_API_RATE_LIMIT=100
VITE_API_RATE_WINDOW=60000

# Cache Settings
VITE_CACHE_DURATION=3600
VITE_ENABLE_SERVICE_WORKER=true

# Social Media Integration
VITE_TWITTER_API_KEY=your_twitter_api_key
VITE_FACEBOOK_APP_ID=your_facebook_app_id

# Content Delivery
VITE_CDN_URL=https://cdn.prompthub.com

# Search Configuration
VITE_SEARCH_API_ENDPOINT=/api/search
VITE_SEARCH_RESULTS_PER_PAGE=20

# WebSocket Configuration
VITE_WEBSOCKET_URL=wss://ws.prompthub.com

# Security Settings
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true
VITE_MAX_UPLOAD_SIZE=5242880