# アプリケーション基本設定
NODE_ENV=development
PORT=3000
APP_NAME=PromptHub
APP_URL=http://localhost:3000
API_VERSION=v1

# セキュリティ設定
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=24h
BCRYPT_SALT_ROUNDS=10

# データベース設定
DB_HOST=localhost
DB_PORT=5432
DB_NAME=prompthub
DB_USER=postgres
DB_PASSWORD=your_database_password
DB_SSL=false

# Redis設定（キャッシュ・セッション管理用）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# メール設定
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password
SMTP_FROM=noreply@prompthub.com

# AWS S3設定（画像アップロード用）
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-northeast-1
AWS_BUCKET_NAME=prompthub-uploads

# OAuth設定
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 通知設定
NOTIFICATION_ENABLED=true
NOTIFICATION_CLEANUP_INTERVAL=7d

# キャッシュ設定
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# セキュリティヘッダー設定
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# ログ設定
LOG_LEVEL=debug
LOG_FORMAT=combined

# 多言語対応設定
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ja,zh,es

# バックアップ設定
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30

# 機能フラグ
FEATURE_SOCIAL_SHARE=true
FEATURE_EXPORT_IMPORT=true
FEATURE_NOTIFICATIONS=true